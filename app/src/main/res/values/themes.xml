        <item name="MyTabTextColor">@color/color_text_tab_day</item>
        <item name="MyTabIndicatorColor">@color/purple_500</item>
        <item name="MyTabBackgroundColor">@color/bottom_sheet_color_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="floatingActionButtonStyle">@style/MyThemeFloatingActionButton</item>
