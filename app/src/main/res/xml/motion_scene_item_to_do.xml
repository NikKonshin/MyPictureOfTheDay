<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="urn:oasis:names:tc:xliff:document:1.2"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <Transition
        motion:constraintSetEnd="@+id/end1"
        motion:constraintSetStart="@+id/start1"
        motion:duration="300"></Transition>

    <Transition
        motion:constraintSetEnd="@+id/start1"
        motion:constraintSetStart="@+id/end1"
        motion:duration="300"></Transition>

    <ConstraintSet android:id="@+id/start1">
        <Constraint
            android:id="@+id/tv_title_item_rv_to_do_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_margin_item_rv_to_do_list"
            android:layout_marginStart="@dimen/standard_margin_item_rv_to_do_list"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="@id/barrier3"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/barrier1"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/et_title_item_rv_to_do_list"
            android:layout_width="@dimen/et_title_item_rv_to_do_list_width"
            android:layout_height="@dimen/et_title_item_rv_to_do_list_height"
            android:layout_margin="@dimen/standard_margin_item_rv_to_do_list"
            android:textSize="10sp"
            android:visibility="gone"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/iv_save_title_item_rv_to_do_list"
            motion:layout_constraintStart_toEndOf="@id/iv_check_out_item_rv_to_do_list"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/iv_save_title_item_rv_to_do_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done_24"
            android:visibility="gone"
            motion:layout_constraintStart_toEndOf="@id/et_title_item_rv_to_do_list"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end1">
        <Constraint
            android:id="@+id/tv_title_item_rv_to_do_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_margin_item_rv_to_do_list"
            android:layout_marginStart="@dimen/standard_margin_item_rv_to_do_list"
            android:visibility="gone"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/barrier1"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/et_title_item_rv_to_do_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_margin_item_rv_to_do_list"
            android:layout_marginTop="@dimen/standard_margin_item_rv_to_do_list"
            android:layout_marginEnd="@dimen/standard_margin_item_rv_to_do_list"
            android:layout_marginBottom="@dimen/standard_margin_item_rv_to_do_list"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="@id/barrier3"
            motion:layout_constraintEnd_toStartOf="@id/iv_save_title_item_rv_to_do_list"
            motion:layout_constraintStart_toEndOf="@id/iv_check_out_item_rv_to_do_list"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/iv_save_title_item_rv_to_do_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/standard_margin_item_rv_to_do_list"
            android:src="@drawable/ic_done_24"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="@id/barrier3"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/et_title_item_rv_to_do_list"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>
</MotionScene>