<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MyThemeCoordinatorLayoutFragmentMain"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.mypictureoftheday.material.ui.fragments.MainFragment">

<androidx.core.widget.NestedScrollView
    style="@style/MyNestedScrollViewFragmentMain">
    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/MyThemeConstraintLayoutFragmentMain">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_main_fragment"
            style="@style/MyThemeTextInputLayoutFragmentMain"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/MyThemeTextInputEditTextFragmentMain"
                android:id="@+id/input_edit_text_main_fragment"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.example.mypictureoftheday.material.util.EquilateralImageView
            android:id="@+id/image_view_main_fragment"
            style="@style/MyThemeEquilateralImageViewFragmentMain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_layout_main_fragment"
            app:srcCompat="@drawable/ic_no_photo_vector"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

    <include layout="@layout/bottom_sheet_layout" />

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        style="@style/MyThemeBottomAppBarFragmentMain"
        app:navigationIcon="@drawable/ic_hamburger_menu_bottom_bar"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        app:layout_anchor="@id/bottom_app_bar"
        style="@style/MyThemeFloatingActionButton"
        app:srcCompat="@drawable/ic_plus_fab"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>