<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".material.ui.fragments.SettingsFragment">

    <TextView
        android:id="@+id/tv_settings_fragment"
        style="@style/MyThemeTextViewHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_enter_theme_settings_fragment"
        android:text="@string/settings"/>

    <TextView
        android:id="@+id/tv_enter_theme_settings_fragment"
        style="@style/MyThemeTVNameChipsGroupTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_settings_fragment"
        app:layout_constraintBottom_toTopOf="@id/chipGroup"
        android:text="@string/enter_theme"
        />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        style="@style/MyThemeChipsGroup"
        app:layout_constraintTop_toBottomOf="@id/tv_enter_theme_settings_fragment"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_standard_theme"
            style="@style/MyThemeChipChoice"
            android:text="@string/standard_theme_chip" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_night_theme"
            style="@style/MyThemeChipChoice"
            android:text="@string/night_theme_chip" />
    </com.google.android.material.chip.ChipGroup>
</androidx.constraintlayout.widget.ConstraintLayout>