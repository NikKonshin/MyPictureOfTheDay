<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MyThemePatentMotionLayoutToDoListFragment"
    android:id="@+id/container_item_to_do"
    app:layoutDescription="@xml/motion_scene_item_to_do"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_check_out_item_rv_to_do_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin_item_rv_to_do_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_check_circle_outline"
        app:layout_constraintBottom_toBottomOf="@id/barrier2"/>

    <ImageView
        android:id="@+id/iv_check_completed_item_rv_to_do_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin_item_rv_to_do_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_check_circle"
        app:layout_constraintBottom_toBottomOf="@id/barrier2"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="iv_check_out_item_rv_to_do_list, iv_check_completed_item_rv_to_do_list" />


    <TextView
        android:id="@+id/tv_title_item_rv_to_do_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?MyTextColor"
        android:text="Введите название задачи..."
        android:visibility="visible"
        android:layout_margin="@dimen/standard_margin_item_rv_to_do_list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/barrier1"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/et_title_item_rv_to_do_list"
        android:layout_width="@dimen/et_title_item_rv_to_do_list_width"
        android:layout_height="@dimen/et_title_item_rv_to_do_list_height"
        android:layout_margin="@dimen/standard_margin_item_rv_to_do_list"
        android:textColor="?MyTextColor"
        android:textSize="@dimen/text_size_et_title_item_rv_to_do_list"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/iv_save_title_item_rv_to_do_list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_check_out_item_rv_to_do_list"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/iv_save_title_item_rv_to_do_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_done_24"
        android:visibility="gone"
        android:layout_margin="@dimen/standard_margin_item_rv_to_do_list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/et_title_item_rv_to_do_list" />

<androidx.constraintlayout.motion.widget.MotionLayout
    android:id="@+id/motion_container2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/barrier3"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/barrier1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layoutDescription="@xml/motion_scene_item_to_do2"
    >

    <ImageView
        android:id="@+id/iv_archive_item_rv_to_do_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_margin_item_rv_to_do_list"
        android:layout_marginTop="@dimen/standard_margin_item_rv_to_do_list"
        android:layout_marginBottom="@dimen/standard_margin_item_rv_to_do_list"
        android:layout_marginEnd="@dimen/standard_margin_item_rv_to_do_list"
        app:layout_constraintTop_toTopOf="@id/motion_container2"
        app:layout_constraintEnd_toStartOf="@id/iv_delete_item_rv_to_do_list"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_archive"
        />

    <ImageView
        android:id="@+id/iv_delete_item_rv_to_do_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_margin_item_rv_to_do_list"
        android:layout_marginTop="@dimen/standard_margin_item_rv_to_do_list"
        android:layout_marginBottom="@dimen/standard_margin_item_rv_to_do_list"
        android:layout_marginEnd="@dimen/standard_margin_item_rv_to_do_list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:src="@drawable/ic_delete"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="iv_archive_item_rv_to_do_list"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="motion_container2"
        />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="iv_archive_item_rv_to_do_list"
        />

    <TextView
        android:id="@+id/tv_task_item_rv_to_do_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin_item_rv_to_do_list"
        android:textColor="?MyTextColor"
        android:text="Марс — четвёртая по удалённости от Солнца и седьмая по размерам планета Солнечной системы. Названа в честь Марса — древнеримского бога войны, соответствующего древнегреческому Аресу. Иногда Марс называют «красной планетой» из-за красноватого оттенка поверхности, придаваемого ей минералом маггемитом (оксидом железа)."
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/barrier5"
        app:layout_constraintStart_toEndOf="@id/barrier4"
        app:layout_constraintEnd_toStartOf="@id/barrier6"
        android:src="@drawable/ic_archive"
        />

    <EditText
        android:id="@+id/et_task_item_rv_to_do_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?MyTextColor"
        android:layout_marginTop="@dimen/standard_margin_item_rv_to_do_list"
        android:layout_marginStart="@dimen/standard_margin_item_rv_to_do_list"
        android:layout_marginBottom="@dimen/standard_margin_item_rv_to_do_list"
        android:layout_marginEnd="@dimen/standard_margin_item_rv_to_do_list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/barrier4"
        app:layout_constraintEnd_toStartOf="@id/barrier6"
        android:src="@drawable/ic_archive"
        />

    <ImageView
        android:id="@+id/iv_save_task_item_rv_to_do_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_done_24"
        android:textAlignment="center"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/barrier5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/et_task_item_rv_to_do_list" />



</androidx.constraintlayout.motion.widget.MotionLayout>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="iv_archive_item_rv_to_do_list, iv_delete_item_rv_to_do_list" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="iv_check_out_item_rv_to_do_list, iv_delete_item_rv_to_do_list" />

</androidx.constraintlayout.motion.widget.MotionLayout>