<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:duration="1000">

        <OnClick motion:targetId="@id/wiki_button" />
    </Transition>

    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/start"
        motion:duration="1000">
        <OnSwipe
            motion:touchAnchorId="@+id/input_layout_main_fragment"
            motion:touchAnchorSide="left"
            motion:dragDirection="dragEnd"
            motion:maxVelocity="1000"/>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/input_layout_main_fragment"
            android:visibility="gone"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            />

        <Constraint
            android:id="@+id/input_edit_text_main_fragment"
            style="@style/MyThemeTextInputEditTextFragmentMain"
            android:visibility="gone"
            />
        <Constraint
            android:id="@id/wiki_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible"
            motion:layout_constraintBottom_toTopOf="@id/image_view_main_fragment"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/input_layout_main_fragment"
            style="@style/MyThemeTextInputLayoutFragmentMain"
            android:visibility="visible"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            />
        <Constraint
            android:id="@+id/input_edit_text_main_fragment"
            style="@style/MyThemeTextInputEditTextFragmentMain"
            android:layout_width="4dp"
            android:layout_height="15dp"
            android:visibility="visible"
            />
        <Constraint
            android:id="@id/wiki_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            motion:layout_constraintBottom_toBottomOf="@id/input_layout_main_fragment"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@id/input_layout_main_fragment">
        </Constraint>
    </ConstraintSet>



</MotionScene>