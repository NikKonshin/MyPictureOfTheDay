<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="urn:oasis:names:tc:xliff:document:1.2"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <Transition
        motion:constraintSetEnd="@+id/end2"
        motion:constraintSetStart="@+id/start2"
        motion:duration="300"></Transition>

    <Transition
        motion:constraintSetEnd="@+id/start2"
        motion:constraintSetStart="@+id/end2"
        motion:duration="300"></Transition>

    <ConstraintSet android:id="@+id/start2">
        <Constraint
            android:id="@+id/tv_task_item_rv_to_do_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_margin_item_rv_to_do_list"
            android:text="Марс — четвёртая по удалённости от Солнца и седьмая по размерам планета Солнечной системы. Названа в честь Марса — древнеримского бога войны, соответствующего древнегреческому Аресу. Иногда Марс называют «красной планетой» из-за красноватого оттенка поверхности, придаваемого ей минералом маггемитом (оксидом железа)."
            android:visibility="gone"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/barrier1"
            motion:layout_constraintTop_toTopOf="@id/barrier5" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end2">
        <Constraint
            android:id="@+id/tv_task_item_rv_to_do_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_margin_item_rv_to_do_list"
            android:layout_marginTop="@dimen/standard_margin_item_rv_to_do_list"
            android:layout_marginBottom="@dimen/standard_margin_item_rv_to_do_list"
            android:text="Марс — четвёртая по удалённости от Солнца и седьмая по размерам планета Солнечной системы. Названа в честь Марса — древнеримского бога войны, соответствующего древнегреческому Аресу. Иногда Марс называют «красной планетой» из-за красноватого оттенка поверхности, придаваемого ей минералом маггемитом (оксидом железа)."
            android:textAlignment="center"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/barrier6"
            motion:layout_constraintStart_toEndOf="@id/barrier4"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>
</MotionScene>